datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Consultation {
  id             Int      @id @default(autoincrement())
  name           String
  phoneNumber    String
  desiredCar     String
  purchaseMethod String
  createdAt      DateTime @default(now())
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}

model Board {
  id        Int      @id @default(autoincrement())
  title     String
  link      String
  createdAt DateTime @default(now())
}
